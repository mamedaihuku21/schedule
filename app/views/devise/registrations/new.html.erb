<%= render "shared/header" %>

<div class="signup-wrapper">
  <h2 class="signup-title">新規登録</h2>

  <%= form_with model: resource, url: registration_path(resource_name), class: "signup-form", local: true do |f| %>

    <!-- 名前 -->
    <div class="form-group">
      <%= f.label :name, "名前" %>
      <%= f.text_field :name %>
    </div>

    <!-- メールアドレス -->
    <div class="form-group">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email %>
    </div>

    <!-- パスワード -->
    <div class="form-group">
      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password %>
    </div>

    <!-- パスワード確認 -->
    <div class="form-group">
      <%= f.label :password_confirmation, "パスワード確認" %>
      <%= f.password_field :password_confirmation %>
    </div>

    <%= f.submit "登録する", class: "signup-btn" %>
  <% end %>
</div>