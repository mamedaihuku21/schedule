<%= render "shared/header" %>

<div class="signup-wrapper">
  <h2 class="signup-title">新規登録</h2>

  <form class="signup-form">
    <!-- 名前 -->
    <div class="form-group">
      <label>名前</label>
      <input type="text">
    </div>

    <!-- メールアドレス -->
    <div class="form-group">
      <label>メールアドレス</label>
      <input type="email">
    </div>

    <!-- パスワード -->
    <div class="form-group">
      <label>パスワード</label>
      <input type="password">
    </div>

    <!-- パスワード確認 -->
    <div class="form-group">
      <label>パスワード確認</label>
      <input type="password">
    </div>

    <button class="signup-btn">登録する</button>
  </form>
</div>